<h1>Thank you for your order</h1>
  
<div class='row'>
  <div class='col s6'>
    <h5>Name</h5>
    <%= @order.name || 'N/A' %>
  </div>
  
  <div class='col s6'>
    <h5>Email</h5>
    <%= @order.email || 'N/A' %>
  </div>
  
</div>

<div class='row'>
  <div class="col s6">
    <h5>Phone</h5>
    <%= @order.phone || 'N/A' %>
  </div>
  
  <div class="col s6">
    <h5>Address</h5>
    <%= @order.address || 'N/A' %>
  </div>
</div>

<div class='row'>
  <div class="col s6">
    <h5>Coupon</h5>
    <%= @order.coupon || 'N/A' %>
  </div>

  <div class="col s6">
    <h5>Total</h5>
    <%= @order.price %> VND
  </div>
</div>

<div class='row'>
  <div class="col s6">
    <h5>Last updated</h5>
    <%= @order.updated_at.strftime("%B %-d, %Y %k:%M") %>
  </div>

  <div class="col s6">
    <h5>Status</h5>
    <%= @order.active ? 'In progress' : 'Delivered' %>
  </div>
</div>

<div class="divider"></div>

<h2>Ordered food</h2>
<div class='row'>
  <table>
    <thead>
      <tr>
        <th>Food Name</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
      <% @order.food_items.each do |food_item| %>
        <tr>
          <td><%= food_item.name %></td>
          <td><%= food_item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class='row'>
  <% if @order.active %>
    <%= link_to 'Edit shipping details', edit_order_path(@order), class: 'btn waves-effect waves-light' %>
    <%= link_to 'Deliver', deliver_order_path(@order), method: :post, class: 'btn waves-effect waves-light'  %>
  <% end %>
</div>

